<% include header %>

<div class="col text-center mx-auto">
		<form action="/tasks/update/<%=todo._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Update To Do</label>
				<input type="text" value="<%= todo.text %>" name="todo[text]" class="form-control">
			</div>
			<button class="btn btn-success btn-rounded">Update Task</button>
			<a href="/index" id="cancel" name="cancel" class="btn btn-danger btn-rounded">Cancel</a>
		</form>

</div>

<% include footer %>